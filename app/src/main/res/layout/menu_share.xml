<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="180dp"
    android:weightSum="3"
    android:layout_alignParentTop="true"
    android:layout_gravity="center"
    android:id="@+id/lnr1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/share"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share now"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView2"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:text="Instantly share this post with Everyone"
            android:id="@+id/textView2" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#6a7180"></View>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_write"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Post"
           android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView3"
            android:id="@+id/textView1" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#6a7180"></View>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/messenger"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send as Message"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView4"
            android:id="@+id/textView5" />

    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#fff"
    android:orientation="horizontal"
    android:id="@+id/clickprofile">


    <ImageView
        android:id="@+id/imageAvataHeader"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pic1"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/lnImange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="16dp"
            android:text="Võ Chí Thành" />

        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNameUser"
            android:paddingLeft="5dp"
            android:textSize="10dp"
            android:text="View your profile" />


    </LinearLayout>
</LinearLayout><!-- From: file:/home/thanhitbk/App/Facebook%20Like%20FeedView/app/src/main/res/layout/header_more.xml -->